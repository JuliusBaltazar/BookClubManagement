@model BookClubManagementWeb.Models.ClubViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Book Club</h1>

<hr />
@using (Html.BeginForm("BookClubs", "Club", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Club" asp-action="BookClubs">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ClubName" class="control-label"></label>
                    <input asp-for="ClubName" class="form-control" />
                    <span asp-validation-for="ClubName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
<div>
    <a asp-controller="Club" asp-action="BookClubs">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
